             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="app1.MainPage">
    <ContentPage.Resources>
        <StyleSheet Source="css/stylessaving.css"/>
    </ContentPage.Resources>

    <StackLayout>
        <!-- Place new controls here -->
        <Label x:Name="test"  Text="Welkom bij de Drinkingame!" 
          StyleClass="test"></Label>
        <Button Text="Game 1"  StyleClass="button" Clicked="Game1"/>
